<div class="container">
  <div class="profile_upper span_4">
    <div class="profile_image_box span_8">
      <img class="profile_image" src="" alt="Profile Picture" />
    </div>

    <p class="profile_name"><%= @user.name %> <span class="profile_handle"><%= @user.twitter_handle %></span></p>

    <p class="profile_pledged">Pledged $<%= @user.pledge_cnt %> and fulfilled $<%= @user.fulfilled_pledge_cnt %>!</p>

    <script type="text/x-handlebars-template" id="pledgedCntId">
      <p class="profile_pledged">Pledged {{user.name}}</p>
    </script>
  </div>

  <ul class="profile_tweet_list">
    <% #@pledges.each do |pledge| %>
    <li class="profile_tweet_list_item">
      <p class="profile_tweet_list_item_text">
        <% #= pledge.tweet_message %>
      </p>
    </li>
    <% #end %>
  </ul>
</div>

<script>
  function getUser() {
    var url = "https://localhost:3000/users/1";
    $.ajax({
      type: 'GET',
      url: url
    }).success(function(data) {
      console.log("GOT A USER: " + data);
      return data;
    }).fail(function(data) {
      console.log("COULDN'T GET A USER: " + data);
      return data;
    });

  }
</script>



